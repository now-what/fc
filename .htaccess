# Allow robots and custom error page to be accessible
RewriteRule ^robots\.txt$ - [L]
RewriteRule ^error\.html$ - [L]

# DO NOT REMOVE THIS LINE AND THE LINES BELOW HOTLINKID://www.francescocolombo.me/
RewriteEngine on
RewriteCond %{HTTP_REFERER} !^http://francescocolombo.me/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^http://francescocolombo.me$      [NC]
RewriteCond %{HTTP_REFERER} !^http://www.francescocolombo.me/.*$      [NC]
RewriteCond %{HTTP_REFERER} !^http://www.francescocolombo.me$      [NC]
RewriteRule .*\.(.*)$ http://www.francescocolombo.me/ [R,NC]
# DO NOT REMOVE THIS LINE AND THE LINES ABOVE //www.francescocolombo.me/:HOTLINKID

# Do not remove this line, otherwise mod_rewrite rules will stop working
RewriteBase /

# Specify custom error page
ErrorDocument 400 /error.html
ErrorDocument 401 /error.html
ErrorDocument 403 /error.html
ErrorDocument 404 /error.html
ErrorDocument 500 /error.html
